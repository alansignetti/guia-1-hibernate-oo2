<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration ">
<!-- http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd -->

<hibernate-configuration>
<!--  -->
	<session-factory>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost/bd-hibernate-una-entidad?useSSL=false</property>
		<property name="connection.username">root</property>
		<property name="connection.password">root</property>
		<property name="connection.pool_size">1</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="show_sql">true</property> <!-- en true muestra hql en consola -->
		<!--Mapeo Entidades -->
		<mapping resource="mapeos/Cliente.hbm.xml" />
	</session-factory>
	
